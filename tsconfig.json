{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["src/*"],
      "@db/*": ["src/db/*"],
      "@models/*": ["src/db/models/*"],
      "@interfaces/*": ["src/common/interfaces/*"],
      "@storage/*": ["src/storage/*"],
      "@services/*": ["src/services/*"],
      "@middlewares/*": ["src/api/middlewares/*"],
      "@constants/*": ["src/common/constants/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "**/test"]
}
